<section id="dashboard" style="display:none;">
  <section class="card" id="new-post-form"  > 
    <div class="card_header">
      <h5>Create New Post</h5> 
    </div> 
    <div class="card_body">
      <form  id="login-form">
          <label for="post-title" class="form_label">Title</label>
          <input type="text" id="post-title" name="post-title" class="form_input" autocomplete="off"/>
          
          <label for="post-content"  class="form_label">Content</label>
          <textarea id="post-content" name="post-content" class="form_textarea" autocomplete="off"></textarea>
          <button type="submit" class="btn">Create</button>
        </form>  
    </div>
  </section>  
  <section class="flex-row justify_space_between">
      <div class="col-12 col-md-4">
      </div>  
      <div class="col-12 col-md-4">
        <button class="btn" onclick="RenderOthers()">+ New Post</button>
      </div>  
      <div class="col-12 col-md-4">
      </div> 
  </section>
 </section>
{{!-- users won't see any of this content if they have no posts --}}
{{!-- posts.length possible because of the router.get/posts.findAll that get called to render all posts --}}
{{#if posts.length}}
<section>
  <h2>&raquo; Your Posts</h2>
  {{#each posts as |post|}}
  <div class="card">
    <div class="card_header">
      {{!-- <a href="/post/{{id}}">{{title}}</a>  --}}
      <a title="Click to Edit or Delete" href="/dashboard/edit/{{post.id}}" class="edit-link" id="edit-link">{{title}}</a>
      <h6>Posted by {{user.username}} on {{format_date created_at}}</h6> 
    </div>
    <div class="card_body">
      <div class="post_content">
          {{post_content}}
      </div>
    </div>
  </div>
{{/each}}
<div id="reserved_space" class="flex-row justify_space_between">
  <div class="col-12 col-md-4">
  </div>  
  <div class="col-12 col-md-4">
    <br><br>
    <button class="btn" onclick="HideMyselfRenderOthers()">+ New Post</button>
  </div>  
  <div class="col-12 col-md-4">
  </div> 
</div>
</section>
{{else}}
<div id="reserved_space" class="flex-row justify_space_between">
  <div class="col-12 col-md-4">
  </div>  
  <div class="col-12 col-md-4">
    <br><br><br><br><br><br><br><br><br>
    <button class="btn" onclick="HideMyselfRenderOthers()">+ New Post</button>
  </div>  
  <div class="col-12 col-md-4">
  </div> 
</div>
{{/if}}
 
 
<script> 
  function HideMyselfRenderOthers() {
    var space = document.getElementById("reserved_space");
    var dashboard = document.getElementById("dashboard");   
    dashboard.style.display = "block";
    space.style.display = "none";
    
  }

  function RenderOthers() {
    var space = document.getElementById("reserved_space");
    $("#new-post-form").hide();
    $("#new-post-form").show(1000);
     
  }

</script>
<script src="/javascript/add-post.js"></script>
