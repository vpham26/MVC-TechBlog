{{#if posts.length}}
{{#each posts as |post|}}
<div class="card">
    <div class="card_header">
        <a href="/post/{{id}}" title="Click to Edit or Comment">{{title}}</a> 
        <h6>Posted by {{mod14user.username}} on {{format_date created_at}}</h6> 
    </div>
    <div class="card_body">
        <div class="post_content">
            {{post_content}}
        </div>
    </div>
</div>
{{/each}}
{{else}}
<div id="reserved_space" class="flex-row justify_space_between">
  <div class="col-12 col-md-3">
  </div>  
  <div class="col-12 col-md-6 no_post_found" >
    No Posts Found 
   </div>
  <div class="col-12 col-md-3">
  </div> 
</div>
{{/if}}



    
    